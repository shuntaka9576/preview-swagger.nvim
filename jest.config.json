{
  "collectCoverage": true,
  "collectCoverageFrom": [
    "**/*.{ts,tsx}",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageReporters": [
    "html"
  ],
  "testMatch": [
    "**/*.test.ts"
  ],
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "roots": [
    "<rootDir>/tests"
  ]
}
